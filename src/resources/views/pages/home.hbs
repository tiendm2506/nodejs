<div class='container'>
    <div class='row'>
        {{#each courses}}
            <div class='col-lg-4'>
                <div class='card'>
                    <img
                        src='{{this.image}}'
                        class='card-img-top'
                        alt='{{this.name}}'
                    />
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.name}}</h5>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>